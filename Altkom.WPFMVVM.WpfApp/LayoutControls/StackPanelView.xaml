<Window x:Class="Altkom.WPFMVVM.WpfApp.LayoutControls.StackPanelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Altkom.WPFMVVM.WpfApp.LayoutControls"
        mc:Ignorable="d"
        Title="StackPanelView" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Width="200" Margin="40 20 30 10" Background="Green" Grid.Column="0" Grid.ColumnSpan="2">Customers</Button>
            <Button Width="200" Margin="10 20" Background="Blue" Grid.Column="2" Grid.Row="2">Products</Button>
            <Button Width="200" Margin="5" Background="Yellow" Grid.Column="1" Grid.Row="2">Groups</Button>
        </StackPanel>
    </Grid>
</Window>
