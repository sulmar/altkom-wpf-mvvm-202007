<Application x:Class="Altkom.WPFMVVM.WpfClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Altkom.WPFMVVM.WpfClient"
             StartupUri="Views/ShellView.xaml">
    <Application.Resources>

        <ResourceDictionary>

            <local:ViewModelLocator x:Key="ViewModelLocator" />


            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Images.xaml" />
                <ResourceDictionary Source="Resources/LightModeStyles.xaml" />
                <ResourceDictionary Source="Resources/DataTemplates.xaml" />
                <ResourceDictionary Source="Resources/ControlTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
